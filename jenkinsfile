pipeline{

    agent any

    tools{
            npm install
            npm run build
    }

    stages{

        stage('dependencies'){
            steps{
                sh 'npm install'
            }
        }

        stage('test'){
            steps{
                sh 'npm test || echo "No tests defined"'
            }
        }

        stage('Build'){
            steps{
                sh 'npm run build'
            }
        }

        

        

        

        
    }
}