pipeline{

    agent any

    tools{
        maven 'maven'
    }

    stages{

        stage('checkout'){
            git url 'https://github.com/Aamir377300/exam.git'
                branch 'main'
        }


        stage('dependencies'){
            steps{
                sh 'npm install'
            }
        }

        stage('test'){
            steps{
                sh 'npm test || echo "No tests defined"'
            }
        }

        stage('Build'){
            steps{
                sh 'npm run build'
            }
        }
    }
}